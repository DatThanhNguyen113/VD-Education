<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_detailNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHeaderNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:text="@string/app_name"
                    android:textColor="#327bd7"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvBodyNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Lập trình thiết bị di động Android cơ bản hiện tại đã mở cho các bạn sinh viên của lớp  đăng kí. Hãy nhanh chóng đăng kí trước khi hết thời hạn!"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:typeface="serif" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>